@model Medley.Web.Areas.Integrations.Models.GitHubViewModel
@{
    ViewData["Title"] = Model.IsEdit ? "Edit GitHub Integration" : "Add GitHub Integration";
}

<div class="main-content-header">
    <h1 class="main-content-title">@(Model.IsEdit ? "Edit GitHub Integration" : "Add GitHub Integration")</h1>
    <div class="btn-toolbar">
        <a asp-action="Index" asp-controller="Manage" asp-area="Integrations" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Integrations
        </a>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">GitHub Integration Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @if (Model.IsEdit)
                    {
                        <input asp-for="Id" type="hidden" />
                    }
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group-overlap">
                                <input asp-for="DisplayName" class="form-control" placeholder="e.g., My GitHub Integration" />
                                <label asp-for="DisplayName">Display Name *</label>
                            </div>
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group-overlap">
                                <input asp-for="ApiKey" type="password" class="form-control"
                                    placeholder="@(Model.IsEdit ? "••••••••••••••••••••••••••••••••••••••••" : "GitHub Personal Access Token")" />
                                <label asp-for="ApiKey">Personal Access Token *</label>
                            </div>
                            <span asp-validation-for="ApiKey" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-12">
                            <div class="form-group-overlap">
                                <input asp-for="BaseUrl" class="form-control" placeholder="e.g. https://api.github.com" />
                                <label asp-for="BaseUrl">Base URL</label>
                            </div>
                            <span asp-validation-for="BaseUrl" class="text-danger"></span>
                            <div class="form-text">Leave default for GitHub.com, or enter your GitHub Enterprise URL</div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="@(Model.IsEdit ? "bi bi-check-circle" : "bi bi-plus")"></i> @(Model.IsEdit ? "Update GitHub Integration" : "Create GitHub Integration")
                        </button>
                        <a asp-action="Index" asp-controller="Integrations" asp-area="" class="btn btn-outline-secondary ms-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">GitHub Integration</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="cib-github text-primary me-3" style="font-size: 3rem;"></i>
                    <div>
                        <div class="fw-semibold">GitHub</div>
                        <small class="text-muted">Access repositories, issues, and pull requests</small>
                    </div>
                </div>
                
                <h6 class="small fw-semibold">What GitHub provides:</h6>
                <ul class="small text-muted">
                    <li>Repository access and management</li>
                    <li>Issue tracking and management</li>
                    <li>Pull request monitoring</li>
                    <li>Commit history and statistics</li>
                </ul>
                
                <div class="mt-3">
                    <h6 class="small fw-semibold">How to get a Personal Access Token:</h6>
                    <ol class="small text-muted">
                        <li>Go to GitHub Settings → Developer settings</li>
                        <li>Click "Personal access tokens" → "Tokens (classic)"</li>
                        <li>Click "Generate new token" → "Generate new token (classic)"</li>
                        <li>Set appropriate permissions (repo, read:org, etc.)</li>
                        <li>Copy the generated token</li>
                    </ol>
                </div>
            </div>
        </div>
        
        @if (Model.IsEdit)
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Integration Info</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">
                            <code>@Model.Id!.Value.ToString("N")[..8]...</code>
                        </dd>
                        
                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">GitHub</span>
                        </dd>
                        
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">Configured</span>
                        </dd>
                    </dl>
                    
                    <div class="mt-3">
                        <button type="button" class="btn btn-outline-info btn-sm test-connection" data-id="@Model.Id">
                            <i class="bi bi-check-circle"></i> Test Connection
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (Model.IsEdit)
{
    @section Scripts {
    <script src="~/js/integration-connections.js" asp-append-version="true"></script>
    <script>
        // Set the correct test connection URL for this page
        //window.IntegrationConnections.setTestConnectionUrl('@Url.Action("TestConnection", "Manage", new { area = "Integrations" })');
    </script>
}
}
