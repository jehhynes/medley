@model Medley.Web.Areas.Integrations.Models.ManageViewModel
@{
    ViewData["Title"] = "Integrations";
}

<div class="main-content-header d-flex justify-content-between align-items-center">
    <h1 class="main-content-title">Integrations</h1>
    <a asp-action="Add" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Integration
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Hidden CSRF token for AJAX requests -->
@Html.AntiForgeryToken()

<!-- Integrations List -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">All Integrations</h5>
    </div>
    <div class="card-body p-0">
       
            <div class="table-responsive">
                <div class="p-3">
                    <form method="get" asp-action="Index">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-group-overlap">
                                    <input type="text" class="form-control" id="search" name="search"
                                            value="@Model.SearchTerm">
                                    <label for="search">Search</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group-overlap">
                                    <select class="form-select" id="type" name="type">
                                        <option value="">All Types</option>
                                        @foreach (var item in Model.IntegrationTypes)
                                        {
                                            <option value="@item.Value" selected="@(item.Value == ((int?)Model.SelectedType)?.ToString())">
                                                @item.Text
                                            </option>
                                        }
                                    </select>
                                    <label for="type">Type</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group-overlap">
                                    <select class="form-select" id="status" name="status">
                                        <option value="">All Statuses</option>
                                        @foreach (var item in Model.ConnectionStatuses)
                                        {
                                            <option value="@item.Value" selected="@(item.Value == ((int?)Model.SelectedStatus)?.ToString())">
                                                @item.Text
                                            </option>
                                        }
                                    </select>
                                    <label for="status">Status</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-outline-primary">
                                        <i class="bi bi-search"></i> Filter
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                @if (Model.Integrations.Any())
                {
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Last Modified</th>
                            <th class="text-end" width="200">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var integration in Model.Integrations)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            @switch (integration.Type)
                                            {
                                                case Medley.Domain.Enums.IntegrationType.GitHub:
                                                    <i class="bi bi-github text-dark" style="font-size: 2rem;"></i>
                                                    break;
                                                case Medley.Domain.Enums.IntegrationType.Slack:
                                                    <i class="bi bi-slack text-primary" style="font-size: 2rem;"></i>
                                                    break;
                                                case Medley.Domain.Enums.IntegrationType.Fellow:
                                                    <img src="~/images/fellow-app.svg" alt="Fellow.ai" style="width: 2rem; height: 2rem;" />
                                                    break;
                                                case Medley.Domain.Enums.IntegrationType.Jira:
                                                    <i class="bi bi-kanban text-warning" style="font-size: 2rem;"></i>
                                                    break;
                                                case Medley.Domain.Enums.IntegrationType.Zendesk:
                                                    <i class="bi bi-headset text-info" style="font-size: 2rem;"></i>
                                                    break;
                                                default:
                                                    <i class="bi bi-plug text-secondary" style="font-size: 2rem;"></i>
                                                    break;
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@integration.DisplayName</div>
                                            <small class="text-muted">ID: @integration.Id.ToString("N")[..8]...</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@integration.Type</span>
                                </td>
                                <td>
                                    @{
                                        var statusClass = integration.Status switch
                                        {
                                            Medley.Domain.Enums.ConnectionStatus.Connected => "bg-success",
                                            Medley.Domain.Enums.ConnectionStatus.Disconnected => "bg-warning",
                                            Medley.Domain.Enums.ConnectionStatus.Error => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                        var statusText = integration.Status.ToString();
                                    }
                                    <span class="badge @statusClass" id="status-@integration.Id" data-integration-id="@integration.Id">@statusText</span>
                                    <div class="small text-muted mt-1" id="status-message-@integration.Id" style="display: none;"></div>
                                </td>
                                <td>
                                    @if (integration.LastHealthCheckAt.HasValue)
                                    {
                                        <span title="@integration.LastHealthCheckAt.Value.ToString("yyyy-MM-dd HH:mm:ss")">
                                            @integration.LastHealthCheckAt.Value.ToString("MMM dd, yyyy")
                                        </span>
                                        <br />
                                        <small class="text-muted">Health Check</small>
                                    }
                                    else if (integration.LastModifiedAt.HasValue)
                                    {
                                        <span title="@integration.LastModifiedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")">
                                            @integration.LastModifiedAt.Value.ToString("MMM dd, yyyy")
                                        </span>
                                        <br />
                                        <small class="text-muted">Modified</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </td>
                                <td class="text-end text-nowrap">
                                    <a asp-action="Edit" asp-route-id="@integration.Id" class="btn btn-sm btn-primary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <button type="button" class="dropdown-item test-connection" 
                                                        data-id="@integration.Id" title="Test Connection">
                                                    <i class="bi bi-check-circle"></i> Test Connection
                                                </button>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <button type="button" class="dropdown-item text-danger delete-integration" 
                                                        data-id="@integration.Id" data-name="@integration.DisplayName">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                }
                else
                {
                <div class="text-center py-5">
                    <i class="bi bi-plug text-muted" style="font-size: 3rem;"></i>
                    <h4 class="text-muted mt-3">No integrations found</h4>
                    <p class="text-muted">Get started by adding your first integration.</p>
                    <a asp-action="Add" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> New Integration
                    </a>
                </div>
                }
        </div>
    </div>
</div>

@section Scripts {
    @* <script src="~/js/admin-hub.js" asp-append-version="true"></script> *@
    <script src="~/lib/bootbox/dist/bootbox.all.min.js" asp-append-version="true"></script>
    <script src="~/js/integration-connections.js" asp-append-version="true"></script>
    <script>
        // Set the correct test connection URL for this page
        //window.IntegrationConnections.setTestConnectionUrl('@Url.Action("TestConnection")');
        
        // Delete integration functionality
        document.querySelectorAll('.delete-integration').forEach(button => {
            button.addEventListener('click', function() {
                const id = this.dataset.id;
                const name = this.dataset.name;
                
                bootbox.confirm({
                    title: 'Delete Integration',
                    message: `Are you sure you want to delete the integration <strong>${name}</strong>?<br><small class="text-danger">This action cannot be undone.</small>`,
                    buttons: {
                        cancel: {
                            label: 'Cancel',
                            className: 'btn-secondary'
                        },
                        confirm: {
                            label: 'Delete',
                            className: 'btn-danger'
                        }
                    },
                    callback: function(result) {
                        if (result) {
                            const form = document.createElement('form');
                            form.method = 'POST';
                            form.action = '@Url.Action("Delete", "Manage")/' + id;
                            
                            const token = document.querySelector('input[name="__RequestVerificationToken"]');
                            if (token) {
                                const tokenInput = document.createElement('input');
                                tokenInput.type = 'hidden';
                                tokenInput.name = '__RequestVerificationToken';
                                tokenInput.value = token.value;
                                form.appendChild(tokenInput);
                            }
                            
                            document.body.appendChild(form);
                            form.submit();
                        }
                    }
                });
            });
        });
        
