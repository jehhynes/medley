@model Medley.Web.Areas.Integrations.Models.FellowViewModel
@{
    ViewData["Title"] = Model.IsEdit ? "Edit Fellow Integration" : "Add Fellow Integration";
}

<div class="main-content-header d-flex justify-content-between align-items-center">
    <h1 class="main-content-title">@(Model.IsEdit ? "Edit Fellow Integration" : "Add Fellow Integration")</h1>
    <a asp-action="Index" asp-controller="Manage" asp-area="Integrations" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Fellow Integration Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="form-layout">
                    @if (Model.IsEdit)
                    {
                        <input asp-for="Id" type="hidden" />
                    }
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group-overlap">
                                <input asp-for="Name" class="form-control" placeholder="e.g., My Fellow Integration" />
                                <label asp-for="Name">Name *</label>
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group-overlap">
                                <input asp-for="ApiKey" type="password" class="form-control"
                                    placeholder="@(Model.IsEdit ? "••••••••••••••••••••••••••••••••••••••••" : "Fellow API Key")" />
                                <label asp-for="ApiKey">API Key *</label>
                            </div>
                            <span asp-validation-for="ApiKey" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-12">
                            <div class="form-group-overlap">
                                <input asp-for="BaseUrl" class="form-control" placeholder="e.g. https://mycompany.fellow.app" />
                                <label asp-for="BaseUrl">Base URL</label>
                            </div>
                            <span asp-validation-for="BaseUrl" class="text-danger"></span>
                            <div class="form-text">Your Fellow.ai workspace URL</div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Integration
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Fellow Integration</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <img src="~/images/fellow-app.svg" alt="Fellow.ai" class="me-3" style="width: 3rem; height: 3rem;" />
                    <div>
                        <div class="fw-semibold">Fellow.ai</div>
                        <small class="text-muted">Access meeting recordings and transcripts</small>
                    </div>
                </div>
                
                <h6 class="small fw-semibold">What Fellow.ai provides:</h6>
                <ul class="small text-muted">
                    <li>Meeting transcripts and notes</li>
                    <li>Action items and decisions</li>
                </ul>
                
                <div class="mt-3">
                    <h6 class="small fw-semibold">How to get an API Key:</h6>
                    <ol class="small text-muted">
                        <li>Log in to your Fellow.ai account</li>
                        <li>Go to User Settings → Developer tools</li>
                        <li>Click "Create new API key"</li>
                        <li>Copy the generated key</li>
                    </ol>
                </div>
            </div>
        </div>
        
        @if (Model.IsEdit)
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Integration Info</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">
                            <code>@Model.Id!.Value.ToString("N")[..8]...</code>
                        </dd>
                        
                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">Fellow</span>
                        </dd>
                        
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">Configured</span>
                        </dd>
                    </dl>
                    
                    <div class="mt-3">
                        <button type="button" class="btn btn-outline-info btn-sm test-connection" data-id="@Model.Id">
                            <i class="bi bi-check-circle"></i> Test Connection
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @if (Model.IsEdit)
    {
        <script src="~/js/integration-connections.js" asp-append-version="true"></script>
        <script>
            // Set the correct test connection URL for this page
            //window.IntegrationConnections.setTestConnectionUrl('@Url.Action("TestConnection", "Manage", new { area = "Integrations" })');
        </script>
    }
}
