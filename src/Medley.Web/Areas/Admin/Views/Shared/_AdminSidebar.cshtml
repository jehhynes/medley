@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
    var isSettings = currentArea == "Admin" && currentController == "Settings";
    var isAiPrompts = currentArea == "Admin" && currentController == "AiPrompts";
    var isSpeakers = currentArea == "Admin" && currentController == "Speakers";
    var isIntegrations = currentArea == "Integrations";
    var isUsers = currentArea == "Admin" && currentController == "Users";
    var isKnowledgeBuilderImport = currentArea == "Admin" && currentController == "KnowledgeBuilderImport";
    var isSourceImport = currentArea == "Admin" && currentController == "SourceImport";
    var isTagTypes = currentArea == "Admin" && currentController == "TagTypes";
    var isArticleTypes = currentArea == "Admin" && currentController == "ArticleTypes";
}

<div class="sidebar-header">
    <h6 class="sidebar-title">Settings</h6>
</div>
<div class="sidebar-content">
    <ul class="list-view">
        <li class="list-item">
            <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="list-item-content @(isSettings ? "active" : "")">
                <i class="list-item-icon bi bi-gear"></i>
                <div class="list-item-body">
                    <div class="list-item-title">General</div>
                </div>
            </a>
        </li>
        <li class="list-item">
            <a asp-area="Admin" asp-controller="AiPrompts" asp-action="Index" class="list-item-content @(isAiPrompts ? "active" : "")">
                <i class="list-item-icon bi bi-robot"></i>
                <div class="list-item-body">
                    <div class="list-item-title">AI Prompts</div>
                </div>
            </a>
        </li>
        <li class="list-item">
            <a asp-area="Admin" asp-controller="TagTypes" asp-action="Index" class="list-item-content @(isTagTypes ? "active" : "")">
                <i class="list-item-icon bi bi-tags"></i>
                <div class="list-item-body">
                    <div class="list-item-title">Tags</div>
                </div>
            </a>
        </li>
        <li class="list-item">
            <a asp-area="Admin" asp-controller="ArticleTypes" asp-action="Index" class="list-item-content @(isArticleTypes ? "active" : "")">
                <i class="list-item-icon bi bi-file-text"></i>
                <div class="list-item-body">
                    <div class="list-item-title">Article Types</div>
                </div>
            </a>
        </li>
        <li class="list-item">
            <a asp-area="Admin" asp-controller="Speakers" asp-action="Index" class="list-item-content @(isSpeakers ? "active" : "")">
                <i class="list-item-icon bi bi-person"></i>
                <div class="list-item-body">
                    <div class="list-item-title">Speakers</div>
                </div>
            </a>
        </li>
        <li class="list-item">
            <a asp-area="Integrations" asp-controller="Manage" asp-action="Index" class="list-item-content @(isIntegrations ? "active" : "")">
                <i class="list-item-icon bi bi-plug"></i>
                <div class="list-item-body">
                    <div class="list-item-title">Integrations</div>
                </div>
            </a>
        </li>
        @if (User.IsInRole("Admin"))
        {
            <li class="list-item">
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="list-item-content @(isUsers ? "active" : "")">
                    <i class="list-item-icon bi bi-people"></i>
                    <div class="list-item-body">
                        <div class="list-item-title">Users</div>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="sidebar-header">
        <h6 class="sidebar-title">Utilities</h6>
    </div>
    <div class="sidebar-content">
        <ul class="list-view">
            <li class="list-item">
                <a asp-area="Admin" asp-controller="KnowledgeBuilderImport" asp-action="Index" class="list-item-content @(isKnowledgeBuilderImport ? "active" : "")">
                    <i class="list-item-icon bi bi-file-earmark-arrow-up"></i>
                    <div class="list-item-body">
                        <div class="list-item-title">Knowledge Builder Import</div>
                    </div>
                </a>
            </li>
            <li class="list-item">
                <a asp-area="Admin" asp-controller="SourceImport" asp-action="Index" class="list-item-content @(isSourceImport ? "active" : "")">
                    <i class="list-item-icon bi bi-file-earmark-arrow-up"></i>
                    <div class="list-item-body">
                        <div class="list-item-title">Collector Import</div>
                    </div>
                </a>
            </li>
        </ul>
    </div>
}

