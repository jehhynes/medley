@model IEnumerable<Medley.Domain.Entities.KnowledgeCategory>
@{
    ViewData["Title"] = "Knowledge Categories";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-header d-flex justify-content-between align-items-start mb-4">
    <div>
        <h1 class="main-content-title">Knowledge Categories</h1>
        <p class="text-muted">Manage knowledge categories and their icons.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Knowledge Category
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Hidden CSRF token for AJAX requests -->
@Html.AntiForgeryToken()

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">All Knowledge Categories</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            @if (Model.Any())
            {
                <table class="table align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Icon</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@category.Name</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(category.Icon))
                                    {
                                        var iconClass = category.Icon.StartsWith("bi-") ? $"bi {category.Icon}" :
                                                        category.Icon.StartsWith("fa-") ? $"fas {category.Icon}" :
                                                        category.Icon;

                                        <i class="@iconClass"></i>
                                        <span class="text-muted ms-2">@category.Icon</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">None</span>
                                    }
                                </td>
                                <td class="text-end text-nowrap">
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-primary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <button type="button" class="dropdown-item text-danger delete-category" data-id="@category.Id" data-name="@category.Name">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-tag text-muted" style="font-size: 3rem;"></i>
                    <h4 class="text-muted mt-3">No knowledge categories found</h4>
                    <p class="text-muted">Get started by creating your first knowledge category.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> New Knowledge Category
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootbox/dist/bootbox.all.min.js" asp-append-version="true"></script>
    <script>
        document.querySelectorAll('.delete-category').forEach(button => {
            button.addEventListener('click', function() {
                const categoryId = this.dataset.id;
                const categoryName = this.dataset.name;
                
                bootbox.confirm({
                    title: 'Delete Knowledge Category',
                    message: `Are you sure you want to delete the knowledge category <strong>${categoryName}</strong>?<br><br>This action cannot be undone if fragments are using this category.`,
                    buttons: {
                        cancel: {
                            label: 'Cancel',
                            className: 'btn-secondary'
                        },
                        confirm: {
                            label: 'Delete',
                            className: 'btn-danger'
                        }
                    },
                    callback: function(result) {
                        if (result) {
                            const form = document.createElement('form');
                            form.method = 'POST';
                            form.action = '@Url.Action("Delete", "KnowledgeCategories")/' + categoryId;
                            
                            const token = document.querySelector('input[name="__RequestVerificationToken"]');
                            if (token) {
                                const tokenInput = document.createElement('input');
                                tokenInput.type = 'hidden';
                                tokenInput.name = '__RequestVerificationToken';
                                tokenInput.value = token.value;
                                form.appendChild(tokenInput);
                            }
                            
                            document.body.appendChild(form);
                            form.submit();
                        }
                    }
                });
            });
        });
    </script>
}
