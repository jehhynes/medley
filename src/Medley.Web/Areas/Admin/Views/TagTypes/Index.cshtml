@model IEnumerable<Medley.Domain.Entities.TagType>
@{
    ViewData["Title"] = "Tag Types";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">Tag Types</h2>
        <p class="text-muted">Manage structured tag categories and allowed values.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Tag Type
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="table-responsive">
    <table class="table align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Mode</th>
                <th>Scope Update</th>
                <th>Allowed Values</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-muted text-center py-4">No tag types configured.</td>
            </tr>
        }
        else
        {
            foreach (var tagType in Model)
            {
                <tr>
                    <td class="fw-semibold">@tagType.Name</td>
                    <td>
                        @if (tagType.IsConstrained)
                        {
                            <span class="badge bg-danger-subtle text-danger-emphasis">Constrained</span>
                        }
                        else
                        {
                            <span class="badge bg-info-subtle text-info-emphasis">Suggested</span>
                        }
                    </td>
                    <td>
                        @switch (tagType.ScopeUpdateMode)
                        {
                            case Medley.Domain.Enums.ScopeUpdateMode.MarkInternalIfUnknown:
                                <span class="badge bg-success-subtle text-success-emphasis">Mark Internal</span>
                                break;
                            case Medley.Domain.Enums.ScopeUpdateMode.MarkExternalIfUnknown:
                                <span class="badge bg-warning-subtle text-warning-emphasis">Mark External</span>
                                break;
                            default:
                                <span class="text-muted">None</span>
                                break;
                        }
                    </td>
                    <td>
                        @if (tagType.AllowedValues?.Any() == true)
                        {
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var v in tagType.AllowedValues.OrderBy(v => v.Value))
                                {
                                    <span class="badge bg-secondary">@v.Value</span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                    <td class="text-end text-nowrap">
                        <a asp-action="Edit" asp-route-id="@tagType.Id" class="btn btn-sm btn-outline-secondary me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@tagType.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this tag type?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

