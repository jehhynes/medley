@model IEnumerable<Medley.Domain.Entities.TagType>
@{
    ViewData["Title"] = "Tags";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-header d-flex justify-content-between align-items-start mb-4">
    <div>
        <h1 class="main-content-title">Tags</h1>
        <p class="text-muted">Manage structured tag categories and allowed values.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Tag Type
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<!-- Hidden CSRF token for AJAX requests -->
@Html.AntiForgeryToken()

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">All Tag Types</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            @if (Model.Any())
            {
                <table class="table align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Mode</th>
                            <th>Scope Update</th>
                            <th>Allowed Values</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tagType in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@tagType.Name</td>
                                <td>
                                    @if (tagType.IsConstrained)
                                    {
                                        <span class="badge bg-danger-subtle text-danger-emphasis">Constrained</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info-subtle text-info-emphasis">Suggested</span>
                                    }
                                </td>
                                <td>
                                    @switch (tagType.ScopeUpdateMode)
                                    {
                                        case Medley.Domain.Enums.ScopeUpdateMode.MarkInternalIfUnknown:
                                            <span class="badge bg-success-subtle text-success-emphasis">Mark Internal</span>
                                            break;
                                        case Medley.Domain.Enums.ScopeUpdateMode.MarkExternalIfUnknown:
                                            <span class="badge bg-warning-subtle text-warning-emphasis">Mark External</span>
                                            break;
                                        default:
                                            <span class="text-muted">None</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (tagType.AllowedValues?.Any() == true)
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var v in tagType.AllowedValues.OrderBy(v => v.Value))
                                            {
                                                <span class="badge bg-secondary">@v.Value</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">None</span>
                                    }
                                </td>
                                <td class="text-end text-nowrap">
                                    <a asp-action="Edit" asp-route-id="@tagType.Id" class="btn btn-sm btn-primary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <button type="button" class="dropdown-item text-danger delete-tagtype" data-id="@tagType.Id" data-name="@tagType.Name">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-tags text-muted" style="font-size: 3rem;"></i>
                    <h4 class="text-muted mt-3">No tag types found</h4>
                    <p class="text-muted">Get started by creating your first tag type.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> New Tag Type
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootbox/dist/bootbox.all.min.js" asp-append-version="true"></script>
    <script>
        document.querySelectorAll('.delete-tagtype').forEach(button => {
            button.addEventListener('click', function() {
                const tagTypeId = this.dataset.id;
                const tagTypeName = this.dataset.name;
                
                bootbox.confirm({
                    title: 'Delete Tag Type',
                    message: `Are you sure you want to delete the tag type <strong>${tagTypeName}</strong>?`,
                    buttons: {
                        cancel: {
                            label: 'Cancel',
                            className: 'btn-secondary'
                        },
                        confirm: {
                            label: 'Delete',
                            className: 'btn-danger'
                        }
                    },
                    callback: function(result) {
                        if (result) {
                            const form = document.createElement('form');
                            form.method = 'POST';
                            form.action = '@Url.Action("Delete", "TagTypes")/' + tagTypeId;
                            
                            const token = document.querySelector('input[name="__RequestVerificationToken"]');
                            if (token) {
                                const tokenInput = document.createElement('input');
                                tokenInput.type = 'hidden';
                                tokenInput.name = '__RequestVerificationToken';
                                tokenInput.value = token.value;
                                form.appendChild(tokenInput);
                            }
                            
                            document.body.appendChild(form);
                            form.submit();
                        }
                    }
                });
            });
        });
    </script>
}

