@model Medley.Domain.Entities.TagType
@{
    ViewData["Title"] = "Edit Tag Type";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var allowedValues = ViewBag.AllowedValues as string ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Edit Tag Type</h2>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back</a>
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3 form-floating">
        <input asp-for="Name" class="form-control" placeholder="Name" />
        <label asp-for="Name">Name</label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3 form-floating">
        <textarea asp-for="Prompt" class="form-control" style="height: 140px;" placeholder="Prompt for AI"></textarea>
        <label asp-for="Prompt">AI Prompt guidance (optional)</label>
        <span asp-validation-for="Prompt" class="text-danger"></span>
    </div>

    <div class="form-check form-switch mb-3">
        <input asp-for="IsConstrained" class="form-check-input" type="checkbox" role="switch" />
        <label asp-for="IsConstrained" class="form-check-label">Constrained (must pick from allowed values)</label>
    </div>

    <div class="mb-3 form-floating">
        <textarea name="allowedValues" class="form-control" style="height: 160px;" placeholder="Allowed values (one per line)">@allowedValues</textarea>
        <label for="allowedValues">Allowed values (one per line)</label>
        <div class="form-text">Values not listed here will be removed when saved.</div>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save</button>
</form>
