@model IEnumerable<Medley.Domain.Entities.UserAuditLog>
@{
    ViewData["Title"] = "Audit Log";
    var currentPage = (int)ViewData["CurrentPage"]!;
    var totalPages = (int)ViewData["TotalPages"]!;
    var totalCount = (int)ViewData["TotalCount"]!;
}

<div class="main-content-header d-flex justify-content-between align-items-center">
    <h1 class="main-content-title">User Audit Log</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Users
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">User Audit Log</h5>
    </div>
    <div class="card-body p-0">
        <div class="p-3">
            <p class="text-muted mb-0">Total entries: @totalCount</p>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>IP Address</th>
                            <th>Status</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr class="@(log.Success ? "" : "table-danger")">
                                <td class="text-nowrap">@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@(log.UserName ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-@(log.Action switch {
                                        Medley.Domain.Enums.UserAuditAction.Login => "success",
                                        Medley.Domain.Enums.UserAuditAction.Logout => "info",
                                        Medley.Domain.Enums.UserAuditAction.FailedLogin => "danger",
                                        Medley.Domain.Enums.UserAuditAction.RoleChange => "warning",
                                        Medley.Domain.Enums.UserAuditAction.UserDeleted => "danger",
                                        Medley.Domain.Enums.UserAuditAction.AccountLocked => "warning",
                                        Medley.Domain.Enums.UserAuditAction.AccountUnlocked => "success",
                                        _ => "secondary"
                                    })">
                                        @log.Action
                                    </span>
                                </td>
                                <td>@log.IpAddress</td>
                                <td>
                                    @if (log.Success)
                                    {
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle-fill text-danger"></i>
                                    }
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@log.Details">
                                    @log.Details
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (totalPages > 1)
            {
                <nav aria-label="Audit log pagination">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="AuditLog" asp-route-page="@(currentPage - 1)">Previous</a>
                        </li>
                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="AuditLog" asp-route-page="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="AuditLog" asp-route-page="@(currentPage + 1)">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

