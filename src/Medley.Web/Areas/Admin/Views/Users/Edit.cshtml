@model Medley.Web.Models.UserEditViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="main-content-header">
    <h1 class="main-content-title">Edit User</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3 form-group-overlap">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>

                        <div class="mb-3 form-group-overlap">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" readonly />
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="EmailConfirmed" class="form-check-input" />
                            <label asp-for="EmailConfirmed" class="form-check-label"></label>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsLockedOut" class="form-check-input" />
                            <label asp-for="IsLockedOut" class="form-check-label"></label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Roles</label>
                            @foreach (var role in Model.AvailableRoles)
                            {
                                <div class="form-check">
                                    <input type="checkbox" name="selectedRoles" value="@role" 
                                           class="form-check-input" 
                                           @(Model.UserRoles.Contains(role) ? "checked" : "") />
                                    <label class="form-check-label">@role</label>
                                </div>
                            }
                        </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save User</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

