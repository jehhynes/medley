@{
    ViewData["Title"] = "AI Prompts";
    ViewData["HasLeftSidebar"] = true;
    Layout = "_VueLayout";
}

@* Vue template has been moved to wwwroot/js/pages/ai-prompts.js *@
@* This is an intermediate step before full migration to .vue SFC *@
<div id="app"></div>

@section Styles {
    <style>
        .sidebar-breadcrumb-title {
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .sidebar-breadcrumb-title a {
            color: var(--bs-secondary-color);
            text-decoration: none;
            font-weight: 500;
        }

        .sidebar-breadcrumb-title a:hover {
            color: var(--bs-primary);
        }

        .sidebar-breadcrumb-title i {
            font-size: 0.6rem;
            color: var(--bs-secondary-color);
        }

        .sidebar-breadcrumb-title span {
            color: var(--bs-body-color);
        }

        .template-save-indicator {
            padding: 0.5rem 1.5rem;
            font-size: 0.75rem;
            border-top: 1px solid var(--bs-border-color);
            background-color: var(--bs-body-bg);
        }
    </style>
}

@section Scripts {
    <script src="~/js/app.js" asp-append-version="true"></script>
    <script src="~/js/utils.js" asp-append-version="true"></script>
    <script src="~/js/dist/components.js" asp-append-version="true"></script>
    <script src="~/js/pages/ai-prompts.js" asp-append-version="true"></script>
}
