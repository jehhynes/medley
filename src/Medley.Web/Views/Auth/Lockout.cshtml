@{
    ViewData["Title"] = "Account Locked";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <i class="bi bi-lock-fill text-warning" style="font-size: 4rem;"></i>
                </div>
                <h2 class="card-title mb-3">Account Locked</h2>
                <p class="text-muted mb-4">
                    Your account has been locked due to multiple failed login attempts. 
                    Please try again in 15 minutes or contact your system administrator for assistance.
                </p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div>
