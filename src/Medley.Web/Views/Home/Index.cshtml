@model Medley.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="h2 mb-0">Welcome to Medley, @Model.UserName!</h1>
        <p class="text-muted">AI-Powered Product Intelligence Platform</p>
    </div>
</div>

<!-- System Status Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="cil-check-circle text-@(Model.SystemStatus.DatabaseConnected ? "success" : "danger")" style="font-size: 2rem;"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title mb-1">Database</h6>
                        <p class="card-text text-@(Model.SystemStatus.DatabaseConnected ? "success" : "danger") mb-0">@(Model.SystemStatus.DatabaseConnected ? "Connected" : "Disconnected")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="cil-cloud text-@(Model.SystemStatus.AwsServicesActive ? "info" : "danger")" style="font-size: 2rem;"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title mb-1">AWS Services</h6>
                        <p class="card-text text-@(Model.SystemStatus.AwsServicesActive ? "info" : "danger") mb-0">@(Model.SystemStatus.AwsServicesActive ? "Active" : "Inactive")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="cil-cog text-@(Model.SystemStatus.BackgroundJobsRunning ? "warning" : "danger")" style="font-size: 2rem;"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title mb-1">Background Jobs</h6>
                        <p class="card-text text-@(Model.SystemStatus.BackgroundJobsRunning ? "warning" : "danger") mb-0">@(Model.SystemStatus.BackgroundJobsRunning ? "Running" : "Stopped")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="cil-shield-alt text-@(Model.SystemStatus.SecurityProtected ? "primary" : "danger")" style="font-size: 2rem;"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title mb-1">Security</h6>
                        <p class="card-text text-@(Model.SystemStatus.SecurityProtected ? "primary" : "danger") mb-0">@(Model.SystemStatus.SecurityProtected ? "Protected" : "Vulnerable")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent Activity</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    @foreach (var activity in Model.RecentActivity)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">@activity.Title</h6>
                                <small class="text-muted">@activity.Description</small>
                            </div>
                            <small class="text-muted">@activity.TimeAgo</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="#" class="btn btn-primary">View Integrations</a>
                    <a href="#" class="btn btn-outline-secondary">Explore Fragments</a>
                    <a href="#" class="btn btn-outline-secondary">Generate Articles</a>
                    <a href="#" class="btn btn-outline-secondary">View Analytics</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Responsive Grid Test -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Responsive Grid Test</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                        <div class="bg-primary text-white p-3 rounded text-center">XS/SM/MD/LG</div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                        <div class="bg-secondary text-white p-3 rounded text-center">XS/SM/MD/LG</div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                        <div class="bg-success text-white p-3 rounded text-center">XS/SM/MD/LG</div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                        <div class="bg-warning text-white p-3 rounded text-center">XS/SM/MD/LG</div>
                    </div>
                </div>
                <p class="text-muted mt-3 mb-0">
                    <small>This grid demonstrates Bootstrap's responsive breakpoints. Resize your browser window to see the columns adjust.</small>
                </p>
            </div>
        </div>
    </div>
</div>