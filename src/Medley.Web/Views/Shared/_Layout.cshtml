@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var hasChat = currentController == "Articles";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - Medley</title>
    
    <link rel="icon" href="~/favicon.ico">
    
    <!-- System theme detection -->
    <script>
        (function() {
            const setTheme = () => {
                const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                document.documentElement.setAttribute('data-bs-theme', isDark ? 'dark' : 'light');
            };
            
            setTheme();
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', setTheme);
        })();
    </script>
    
    <link rel="stylesheet" href="~/css/bootstrap/flatly/bootstrap.min.css">
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="main-page-container @(hasChat ? "has-right-sidebar" : "")">
        <!-- Vertical Menu (Far Left) -->
        <div class="vertical-menu">
            <a asp-area="" asp-controller="Home" asp-action="Index" 
               class="vertical-menu-item @(currentController == "Home" ? "active" : "")" 
               title="Dashboard">
                <i class="bi bi-speedometer2"></i>
                <span class="vertical-menu-item-label">Dashboard</span>
            </a>
            <a asp-area="Integrations" asp-controller="Manage" asp-action="Index" 
               class="vertical-menu-item @(ViewContext.RouteData.Values["area"]?.ToString() == "Integrations" ? "active" : "")" 
               title="Integrations">
                <i class="bi bi-plug"></i>
                <span class="vertical-menu-item-label">Integrations</span>
            </a>
            <a asp-area="" asp-controller="Sources" asp-action="Index" 
               class="vertical-menu-item @(currentController == "Sources" ? "active" : "")" 
               title="Sources">
                <i class="bi bi-folder"></i>
                <span class="vertical-menu-item-label">Sources</span>
            </a>
            <a asp-area="" asp-controller="Fragments" asp-action="Index" 
               class="vertical-menu-item @(currentController == "Fragments" ? "active" : "")" 
               title="Fragments">
                <i class="bi bi-puzzle"></i>
                <span class="vertical-menu-item-label">Fragments</span>
            </a>
            <a asp-area="" asp-controller="Articles" asp-action="Index" 
               class="vertical-menu-item @(currentController == "Articles" ? "active" : "")" 
               title="Articles">
                <i class="bi bi-file-text"></i>
                <span class="vertical-menu-item-label">Articles</span>
            </a>
            <div style="flex: 1;"></div>
            @if (User.IsInRole("Admin"))
            {
                <a asp-area="" asp-controller="Users" asp-action="Index" 
                   class="vertical-menu-item @(currentController == "Users" ? "active" : "")" 
                   title="Users">
                    <i class="bi bi-people"></i>
                    <span class="vertical-menu-item-label">Users</span>
                </a>
            }
            <a asp-area="" asp-controller="Settings" asp-action="Index" 
               class="vertical-menu-item @(currentController == "Settings" ? "active" : "")" 
               title="Settings">
                <i class="bi bi-gear"></i>
                <span class="vertical-menu-item-label">Settings</span>
            </a>
            <div class="dropdown">
                <button class="vertical-menu-item" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="User">
                    <i class="bi bi-person-circle"></i>
                    <span class="vertical-menu-item-label">User</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><h6 class="dropdown-header">@User.Identity?.Name</h6></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Left Sidebar (List/Tree) -->
        <div class="sidebar left-sidebar" id="leftSidebar">
            @RenderSection("LeftSidebar", required: false)
        </div>

        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>

        <!-- Right Sidebar -->
        @if (this.IsSectionDefined("RightSidebar"))
        {
            <div class="sidebar right-sidebar" id="rightSidebar">
                @RenderSection("RightSidebar", required: false)
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

