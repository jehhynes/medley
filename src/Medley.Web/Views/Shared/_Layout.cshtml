<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - Medley</title>
    
    <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico">
    
    <!-- CoreUI CSS -->
    <link href="https://cdn.jsdelivr.net/npm/@@coreui/coreui@@5.4.3/dist/css/themes/bootstrap/bootstrap.min.css" rel="stylesheet" integrity="sha384-2N+IHl7TflsBD/9pe1QB8uLoBoE7kIODejp9eye2tfbvhuO+EiyissU8aWDbzxjJ" crossorigin="anonymous">
    
    <!-- CoreUI Icons -->
    <link rel="stylesheet" href="https://unpkg.com/@@coreui/icons/css/free.min.css">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Medley.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar sidebar-dark sidebar-fixed border-end" id="sidebar">
        <div class="sidebar-header border-bottom p-2">
            <div class="sidebar-brand">
                <div class="sidebar-brand-full">
                    <img src="/images/logo.svg" class="sidebar-logo me-2" />
                    <div class="sidebar-brand-text">
                        <span class="sidebar-brand-title">Medley</span>
                        <div class="sidebar-brand-subtitle">AI Product Intelligence</div>
                    </div>
                </div>
                <div class="sidebar-brand-narrow">
                    <i class="cil-music-note"></i>
                </div>
            </div>
            <button class="btn-close d-lg-none" type="button" data-bs-theme="dark" aria-label="Close" onclick="bootstrap.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()"></button>
        </div>
        <ul class="sidebar-nav" data-coreui="navigation" data-simplebar>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="nav-icon cil-speedometer"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="nav-icon cil-plug"></i> Integrations
                </a>
            </li>
            
            <!-- Data Processing Section -->
            <li class="nav-divider"></li>
            
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="nav-icon cil-puzzle"></i> Fragments
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="nav-icon cil-document"></i> Articles
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="nav-icon cil-chart"></i> Analytics
                </a>
            </li>
            
            <!-- System Section -->
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-divider"></li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="UserManagement" asp-action="Index">
                        <i class="nav-icon cil-people"></i> User Management
                    </a>
                </li>
            }
        </ul>
    </div>
    
    <div class="wrapper d-flex flex-column min-vh-100">
        <header class="header header-sticky p-0 mb-4">
            <div class="container-fluid border-bottom px-4">
                <button class="header-toggler" type="button" onclick="bootstrap.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
                    <i class="icon icon-lg cil-menu"></i>
                </button>
                <ul class="header-nav d-none d-lg-flex">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Integrations</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Fragments</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Articles</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Analytics</a></li>
                </ul>
                <ul class="header-nav ms-auto">
                     <li class="nav-item"><a class="nav-link" href="#">
                        <i class="icon icon-lg cil-bell"></i></a></li>
                    <li class="nav-item"><a class="nav-link" href="#">
                        <i class="icon icon-lg cil-list-rich"></i></a></li>
                    <li class="nav-item"><a class="nav-link" href="#">
                        <i class="icon icon-lg cil-envelope-open"></i></a></li>
                </ul>
                <ul class="header-nav">
                    <li class="nav-item py-1">
                        <div class="vr h-100 mx-2 text-body text-opacity-75"></div>
                    </li>
                    <li class="nav-item dropdown">
                        <button class="btn btn-link nav-link py-2 px-2 d-flex align-items-center" type="button" aria-expanded="false" data-bs-toggle="dropdown">
                            <i class="icon icon-lg theme-icon-active cil-contrast"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-custom">
                            <li>
                                <button class="dropdown-item d-flex align-items-center" type="button" data-bs-theme-value="light">
                                    <i class="icon icon-lg me-3 cil-sun"></i>Light
                                </button>
                            </li>
                            <li>
                                <button class="dropdown-item d-flex align-items-center" type="button" data-bs-theme-value="dark">
                                    <i class="icon icon-lg me-3 cil-moon"></i>Dark
                                </button>
                            </li>
                            <li>
                                <button class="dropdown-item d-flex align-items-center active" type="button" data-bs-theme-value="auto">
                                    <i class="icon icon-lg me-3 cil-contrast"></i>Auto
                                </button>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item py-1">
                        <div class="vr h-100 mx-2 text-body text-opacity-75"></div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link py-0 pe-0" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            <div class="avatar avatar-md">
                                <i class="avatar-img cil-user"></i>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end pt-0">
                            <div class="dropdown-header bg-body-tertiary text-body-secondary fw-semibold rounded-top mb-2">Account</div>
                            <partial name="_LoginPartial" />
                        </div>
                    </li>
                </ul>
            </div>
     @*        <div class="container-fluid px-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb my-0">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active"><span>@ViewData["Title"]</span></li>
                    </ol>
                </nav>
            </div> *@
        </header>
        
        <div class="body flex-grow-1">
            <div class="container-lg px-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
        
        <footer class="footer px-4">
            <div class="d-flex justify-content-between align-items-center w-100">
                <div>&copy; 2025 - Medley</div>
                <div><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></div>
            </div>
        </footer>
    </div>
    
    <!-- CoreUI and necessary plugins -->
    <script src="https://cdn.jsdelivr.net/npm/@@coreui/coreui@@5.4.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-Hlm5ZxJ1/czt1YRCXG/419o5s8Nvmvwhc0V7MzaQENhYOs5fsXdrvglp+kr+JYYq" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
