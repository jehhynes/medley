@{
    ViewData["Title"] = "Settings";
}

@section LeftSidebar {
    <div class="sidebar-header">
        <h6 class="sidebar-title">Settings</h6>
    </div>
    <div class="sidebar-content">
        <ul class="list-view">
            <li class="list-item">
                <a href="#general" class="list-item-content active">
                    <i class="list-item-icon bi bi-gear"></i>
                    <div class="list-item-body">
                        <div class="list-item-title">General</div>
                    </div>
                </a>
            </li>
            <li class="list-item">
                <a href="#appearance" class="list-item-content">
                    <i class="list-item-icon bi bi-palette"></i>
                    <div class="list-item-body">
                        <div class="list-item-title">Appearance</div>
                    </div>
                </a>
            </li>
            <li class="list-item">
                <a href="#notifications" class="list-item-content">
                    <i class="list-item-icon bi bi-bell"></i>
                    <div class="list-item-body">
                        <div class="list-item-title">Notifications</div>
                    </div>
                </a>
            </li>
        </ul>
    </div>
}

<div class="main-content-header">
    <h1 class="main-content-title">Settings</h1>
    <p class="text-muted">Configure your article browser preferences</p>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0" id="general">General Settings</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Settings functionality is under development. Check back soon!
        </div>
        <form>
            <div class="mb-3">
                <label for="defaultView" class="form-label">Default View</label>
                <select class="form-select" id="defaultView" disabled>
                    <option selected>Home</option>
                    <option>Articles</option>
                    <option>Sources</option>
                </select>
                <div class="form-text">Choose the default page when opening Article Browser</div>
            </div>
            <div class="mb-3">
                <label for="itemsPerPage" class="form-label">Items Per Page</label>
                <input type="number" class="form-control" id="itemsPerPage" value="50" disabled>
                <div class="form-text">Number of items to display per page in lists</div>
            </div>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0" id="appearance">Appearance</h5>
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label class="form-label">Theme</label>
                <div class="btn-group w-100" role="group">
                    <input type="radio" class="btn-check" name="theme" id="themeLight" disabled>
                    <label class="btn btn-outline-primary" for="themeLight">
                        <i class="bi bi-sun"></i> Light
                    </label>
                    
                    <input type="radio" class="btn-check" name="theme" id="themeDark" disabled>
                    <label class="btn btn-outline-primary" for="themeDark">
                        <i class="bi bi-moon"></i> Dark
                    </label>
                    
                    <input type="radio" class="btn-check" name="theme" id="themeAuto" checked disabled>
                    <label class="btn btn-outline-primary" for="themeAuto">
                        <i class="bi bi-circle-half"></i> Auto
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="compactMode" disabled>
                    <label class="form-check-label" for="compactMode">
                        Compact Mode
                    </label>
                </div>
                <div class="form-text">Use smaller spacing and font sizes</div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0" id="notifications">Notifications</h5>
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="notifyArticleUpdates" checked disabled>
                    <label class="form-check-label" for="notifyArticleUpdates">
                        Article Updates
                    </label>
                </div>
                <div class="form-text">Receive notifications when articles are updated</div>
            </div>
            <div class="mb-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="notifyChatMessages" checked disabled>
                    <label class="form-check-label" for="notifyChatMessages">
                        Chat Messages
                    </label>
                </div>
                <div class="form-text">Receive notifications for new chat messages</div>
            </div>
            <div class="mb-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="notifyNewSources" disabled>
                    <label class="form-check-label" for="notifyNewSources">
                        New Sources
                    </label>
                </div>
                <div class="form-text">Receive notifications when new sources are imported</div>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a href="@Url.Action("Index", "ArticleBrowser")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Home
    </a>
</div>

